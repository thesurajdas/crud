<%- include('./partials/header.ejs') %>

    <div class="container">
        <h1 class="text-center mt-5">CRUD - NodeJS, ExpressJS, EJS, MongoDB</h1>
        <div class="row mt-5">
            <div class="col-sm-6">
                <h2 class="alert alert-success text-center">Add New Student</h2>
                <form method="post">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" name="name" id="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="name" class="form-label">Age</label>
                        <input type="number" class="form-control" name="age" id="age" required>
                    </div>
                    <div class="mb-3">
                        <label for="name" class="form-label">Fees</label>
                        <input type="text" class="form-control" name="fees" id="fees" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
            <div class="col-sm-6">
                <h2 class="alert alert-danger text-center">List of Students</h2>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th scope="col">No</th>
                            <th scope="col">Name</th>
                            <th scope="col">Age</th>
                            <th scope="col">Fees</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% var count=1; data.forEach(item=> { %>
                            <tr>
                                <td>
                                    <%= count++ %>
                                </td>
                                <td>
                                    <%= item.name %>
                                </td>
                                <td>
                                    <%= item.age %>
                                </td>
                                <td>
                                    <%= item.fees %>
                                </td>
                                <td>
                                    <a href="./edit/<%= item._id %>"><i class="fas fa-pen-square text-info"></i></a>
                                    <a href="./delete/<%= item._id %>"><i class="fas fa-trash text-danger"></i></a>
                                </td>
                                <% }); %>
                            </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <%- include('./partials/footer.ejs') %>