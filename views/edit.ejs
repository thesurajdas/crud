<%- include('./partials/header.ejs') %>

    <div class="container mt-5 col-sm-4">
        <h2 class="alert alert-success text-center">Update Student</h2>
        <form action="/update/<%= data._id %>" method="post">
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" name="name" id="name" value="<%= data.name %>" required>
            </div>
            <div class="mb-3">
                <label for="name" class="form-label">Age</label>
                <input type="number" class="form-control" name="age" id="age" value="<%= data.age %>" required>
            </div>
            <div class="mb-3">
                <label for="name" class="form-label">Fees</label>
                <input type="text" class="form-control" name="fees" id="fees" value="<%= data.fees %>" required>
            </div>
            <button type="submit" class="btn btn-success">Update</button>
            <a href="/"><button type="submit" class="btn btn-secondary">Back To Home</button></a>
        </form>
    </div>

    <%- include('./partials/footer.ejs') %>